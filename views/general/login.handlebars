<main>
    <h1 class = "first">Log In</h1>
        <div class = "divForm">
            <form action="/login" method="POST" class="login-form">
            <label id = "form">
                Username:
                <br>
                <input type="text" id="username" name="username" placeholder="Username" value="{{login.username}}" class="full-width-input"/>
                <br>
                Password:
                <br>
                <input type="password" id="password" name="password" placeholder="Password" value="{{login.password}}" class="full-width-input"/>
            </label>
            <br>
            <br>
            <button class="btnLogin" type="submit">Log in</button>
            <a href="/signup"><button class="btnSignUp" type="TO BE DECIDED">Sign Up</button></a>
            </form>
        </div>
        <div id="message">
            <h3>Password must contain the following:</h3>
            <p id="letter" >A lowercase letter</p>
            <p id="capital">A capital letter</p>
            <p id="number" >A number</p>
            <p id="length" >Minimum 8 characters</p>
        </div>
        <script src="/public/login.js"></script>
</main>