<nav class="navbar navbar-expand-lg navbar-light bg-light">
    {{#if auth}}
        {{> navigationAuthPartial }}
    {{else}}
        {{> navigationUnauthPartial }}
    {{/if}}
</nav>
<main>
    <h1 class = "first">Log In</h1>
        <div class = "login-Form">
            <form action="/login" method="POST" class="login-form">
            <label id = "form">
                Username:
                <br>
                <input type="text" id="username" name="username" placeholder="Username" value="{{login.username}}" >
                <br>
                Password:
                <br>
                <input type="password" id="password" name="password" placeholder="Password" value="{{login.password}}" >
                <div class="error" id="errorDiv" hidden></div>
                <div id = "error-message" class = "error-message" hidden> </div> 
            </label>
            <br>
            <br>
            <button type="submit" class="btnLogin" >Log in</button>
            <a href="/signup"><button class="btnSignUp">Sign Up</button></a>
            </form>
        </div>
        <script src="/public/js/login.js"></script>
</main>