<div class="container" id="loginnnCOntainer">
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    {{#if auth}}
        {{> navigationAuthPartial }}
    {{else}}
        {{> navigationUnauthPartial }}
    {{/if}}
</nav>
<main id="log">
    <div class="container" >
        <div class="row">
            <div class="col-md-6">
            <iframe onload="resizeIframe(this)"  src="https://lottiefiles.com/iframe/53395-login" style=" height:100%; margin-left: 10vh;" frameBorder="0"></iframe>
        </div>
        <div class="col-md-6" id="loginField">
            <div>
                <h4 class = "first">Log In</h4>
                <div class = "login-Form">
                    <form action="/login" method="POST" class="login-form">
                    <label id = "login-Form">
                        
                          <div class="form-group">
                        <label>Username</label>
                              <input type="text" id="username" name="username" placeholder="Username" value="{{login.username}}" class="form-control">
                        <span class="error-username" id="error-username"></span>
                        </div>
                          <div class="form-group">
                        <label>Password</label>
                        <input type="password" id="password" name="password" placeholder="Password" value="{{login.password}}" class="form-control">
                        <div class="error-password" id="error-password" ></div>
                        </div>
            
                    </label>
                    <br>
                    <br>
                    <button type="submit" class="btnLogin" >Log in</button>
                    </form>
                </div>
                <div class="signupButton">
                    Didn't have account?
                    
                 <a class="btnSignUp" href="/signup">Sign Up</a>
                    </div>
            </div>
        </div>
        </div>
        <script src="/public/js/login.js"></script>
    </div>

<script type="text/javascript">
  function resizeIframe(iframe) {
    iframe.height = iframe.contentWindow.document.body.scrollHeight + "px";
  }
</script>
    
</main>
</div>