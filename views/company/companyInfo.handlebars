<form onsubmit="return validateMyForm();">
    <div class="row">
        <div class="col-md-12">
            <div id="file" class="form-group">
                <label for="profile">Profile image</label>
                <br />
                <img id="blah" src="#" alt="your image" />
                <br />
                <input type='file' onchange="readURL(this);" />
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="Username">User Name</label>
                <input type="text" class="form-control" id="Username" placeholder="">
            </div>
            <div class="form-group">
                <label for="HrInputEmail1">HR Email</label>
                <input type="email" class="form-control" id="HrInputEmail1" placeholder="">
            </div>

            <div class="form-group">
                <label for="Password">Password</label>
                <input type="password" class="form-control" id="Password" placeholder="">
            </div>

            <div class="form-group">
                <label for="ConfirmPassword">Repeat Password</label>
                <input type="password" class="form-control" id="ConfirmPassword" placeholder="">
            </div>


            <h4>New Job</h4>
            <div id="job-wrapper">
                <div class="form-group">
                    <label for="JobTitle">Job Title</label>
                    <input type="text" class="form-control" id="JobTitle" placeholder="">
                </div>
                <div class="form-group">
                    <label for="JobLocation">Job Location</label>
                    <input type="text" class="form-control" id="JobLocation" placeholder="">
                </div>

                <div class="form-group">
                    <label for="JobCategory">Job Category</label>
                    <input type="text" class="form-control" id="JobCategory" placeholder="">
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="SalaryMin">Salary Min</label>
                            <input type="text" class="form-control" id="SalaryMin" placeholder="">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="SalaryMax">Salary Max</label>
                            <input type="text" class="form-control" id="SalaryMax" placeholder="">
                        </div>
                    </div>
                </div>
            </div>

            <div>
                <button type="button" onclick="addMoreDetails()">Add More1</button>
            </div>
        </div>
        <div class="col-md-6">
            <h4>Company Information</h4>
            <div class="form-group">
                <label for="complanyName">Company Name</label>
                <input type="text" class="form-control" id="complanyName" placeholder="">
            </div>

            <div class="row">
                <div class="col-md-12">
                    <label for="PhoneNumber">Phone number</label>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <input type="text" class="form-control" id="" placeholder="">
                    </div>
                </div>
                <div class="col-md-10">
                    <div class="form-group">
                        <input type="text" class="form-control" id="PhoneNumber" placeholder="">
                    </div>
                </div>

            </div>
            <div class="form-group">
                <label for="Category">Category</label>
                <input type="text" class="form-control" id="Category" placeholder="">
            </div>

            <div class="form-group">
                <label for="address">Address</label>
                <input type="text" class="form-control" id="address" placeholder="">
            </div>



            <div class="form-group">
                <label for="JobDescription">Job Description</label>
                <textarea type="text" class="form-control" id="JobDescription" placeholder="" rows="5"></textarea>
            </div>

            <div class="form-group">
                <label for="Qualifications"> Qualifications</label>
                <textarea type="text" class="form-control" id="Qualifications" placeholder="" rows="5"></textarea>
            </div>
        </div>
        <div class="col-md-12 text-center">
            <button type="submit">Save</button>
        </div>
    </div>
</form>

<script>
    function readURL(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
                $('#blah').attr('src', e.target.result);
            };

            reader.readAsDataURL(input.files[0]);
        }
    }

    function addMoreDetails() {
        let wrapper = document.getElementById('job-wrapper')
        let html = `<div>
            <div class="form-group">
                    <label for="JobTitle">Job Title</label>
                    <input type="text" class="form-control" id="JobTitle" placeholder="">
                </div>
                <div class="form-group">
                    <label for="JobLocation">Job Location</label>
                    <input type="text" class="form-control" id="JobLocation" placeholder="">
                </div>

                <div class="form-group">
                    <label for="JobCategory">Job Category</label>
                    <input type="text" class="form-control" id="JobCategory" placeholder="">
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="SalaryMin">Salary Min</label>
                            <input type="text" class="form-control" id="SalaryMin" placeholder="">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="SalaryMax">Salary Max</label>
                            <input type="text" class="form-control" id="SalaryMax" placeholder="">
                        </div>
                    </div>
                </div>
        </div>`;
        wrapper.innerHTML += html
    }
</script>